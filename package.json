{
  "name": "@simplesthing/federated-modules",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "This is app is setup using yarn workspaces and webpack 5 module federation.",
  "scripts": {
    "astro": "yarn workspace @simplesthing/astrology start",
    "astro:build": "yarn workspace @simplesthing/astrology build",
    "astro:serve": "yarn workspace @simplesthing/astrology serve",
    "components": "yarn workspace @simplesthing/components start",
    "components:build": "yarn workspace @simplesthing/components build-storybook",
    "components:serve": "yarn workspace @simplesthing/components serve",
    "components:deploy": "storybook-to-ghpages --packages packages",
    "dreams": "yarn workspace @simplesthing/dreams start",
    "build:types": "tsc -b"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simplesthing/federated-modules.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/simplesthing/federated-modules/issues"
  },
  "homepage": "https://github.com/simplesthing/federated-modules#readme",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@storybook/storybook-deployer": "^2.8.11",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "babel-loader": "^8.2.5",
    "babel-plugin-tsconfig-paths-module-resolver": "^1.0.3",
    "html-webpack-plugin": "^5.5.0",
    "serve": "^13.0.2",
    "ts-loader": "^9.2.8",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}